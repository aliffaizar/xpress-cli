{
  "name": "xpress-cli",
  "version": "0.0.0-development",
  "description": "A CLI tool for generating Express applications",
  "author": "Alif Faizar <aliffaizar21@gmail.com> (https://aliffaizar.com)",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "bin": {
    "xpress": "./index.js"
  },
  "files": [
    "index.js",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aliffaizar/xpress-cli"
  },
  "bugs": {
    "url": "https://github.com/aliffaizar/xpress-cli/issues"
  },
  "keywords": [
    "express",
    "cli",
    "generator"
  ],
  "scripts": {
    "release": "semantic-release",
    "commit": "cz",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "^10.0.1"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
